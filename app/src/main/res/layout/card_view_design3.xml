<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/perdiscount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="60"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="70dp"
        app:layout_constraintStart_toEndOf="@id/perdiscount"
        app:layout_constraintTop_toTopOf="@id/perdiscount" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:text="discount offered on all types of sports apparel"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@id/sign"
        app:layout_constraintTop_toTopOf="@id/perdiscount" />

    <View
        android:id="@+id/line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/perdiscount"
        android:background="@color/grey"
        />

</androidx.constraintlayout.widget.ConstraintLayout>