<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="1400dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductClicked"
    >

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="MuscleBlaze Biozyme Performance Whey Protein | Clinically Tested 50% Higher Protein Absorption | Informed Choice UK, Labdoor USA Certified and US Patent Filed EAFÂ® (Chocolate Hazelnut, 1 kg / 2.2 lb)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/p6"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/heading"
        />

    <View
        android:id="@+id/l1"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        android:background="@color/grey"
        />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-54"
        android:textColor="@color/red"
        android:textSize="35dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/l1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textColor="@color/red"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/discount"
        app:layout_constraintStart_toEndOf="@id/discount"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:text="$"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/dollar"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/l1"
        app:layout_constraintStart_toEndOf="@id/percent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inclusive of all taxes"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discount"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="10.00"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/l1"
        app:layout_constraintStart_toEndOf="@id/dollar"
        />

    <View
        android:id="@+id/l2"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price"
        android:background="@color/grey"
        />

    <ImageView
        android:id="@+id/locbutton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/location"
        app:layout_constraintTop_toBottomOf="@id/l2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Deliver to - "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/locbutton"
        app:layout_constraintBottom_toBottomOf="@id/locbutton"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Dehradun"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/locbutton"
        app:layout_constraintBottom_toBottomOf="@id/locbutton"
        android:layout_marginLeft="85dp"
        />


    <Button
        android:id="@+id/add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ADD TO CART"
        android:backgroundTint="@color/mustard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locbutton"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="50dp"
        />

    <Button
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="BUY NOW"
        android:backgroundTint="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_to_cart"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        />

    <TextView
        android:id="@+id/productdescriptionh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buy"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/productdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:text="Optimum Nutrition's Gold Standard 100% Whey uses pure Whey Protein Isolates as the primary ingredient. Combined with ultra-filtered whey protein concentrate, each serving provides 24 grams of all-whey protein and 5.5 grams of naturally occurring Branched Chain Amino Acids (BCAAs) which are prized by athletes for their muscle building qualities. With 10 tempting flavors to choose from, ON Gold Standard 100% Whey gives you plenty of ways to keep workout recovery interesting. To instantly check the authenticity of your ON product, SMS us your 6 digit unique code (on the pack) at 57575 or visit our wesite AUTHENTICATEON.in"
        app:layout_constraintTop_toBottomOf="@id/productdescriptionh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/boxcontentsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Box Contents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productdescription"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/boxcontents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:text="1-Optimum Nutrition (ON) Gold Standard 100% Whey Protein Powder - 2 lbs, 907 g (Double Rich Chocolate)"
        app:layout_constraintTop_toBottomOf="@id/boxcontentsh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>